PROJECT_ROOT?=..

MODULE ?=VISION
VISION_MODULE_NAME = vision
VISION_MODULE_PATH = $(PROJECT_ROOT)/$(VISION_MODULE_NAME)

VISION_BUILD_PATH_EXT = $(BUILD_TARGET_PLATFORM)

VISION_LIB_DIR = $(BUILD_PATH_BASE)/$(VISION_MODULE_NAME)/$(VISION_BUILD_PATH_EXT)
VISION_LIB_DEP = $(VISION_LIB_DIR)/lib$(VISION_MODULE_NAME).a

MODULES += $(VISION_MODULE_NAME)


# Target this makefile is building.
TARGET_TYPE = a

VISION_DEPENDENCIES = hal geometry

include ../build/tlm.mk
